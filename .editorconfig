#
# @info Unifying the coding style for different editors and IDEs
# @path .editorconfig
# @date 20220701
#

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# [*.php]

[*.{yml,yaml}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{md,mkd,mkdn,markdown}]
indent_size = 2
trim_trailing_whitespace = false

[{*.sh,.deployignore,.deployproduction,.deploystaging,.htaccess}]
insert_final_newline = false
